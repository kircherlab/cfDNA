# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation
[*.tsv]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2
